# THIS FILE IS RESPONSIBLE FOR DEFINING 
# THE SCHEMA OF THE DATABASE

type Toppings {
    id: ID! @id
    name: String!
}

type IceCream {
  id: ID! @id
  name: String!
  cost: Float!
  toppings: [Toppings!]!
  rating: Float @default(value: 0)
  image: String
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
}

type CartItem {
  id: ID! @id
  userId: ID!
  iceCreamId: ID!
}